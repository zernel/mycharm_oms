<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>&nbsp;</th>
    </tr>
  </thead>

  <tbody>
    <% @stores.each do |store| %>
      <tr>
        <td><%= store.name %></td>
        <td>
          <%= link_to 'Show', store, class: "btn btn-xs btn-default" %>
          <%= link_to 'Edit', edit_store_path(store), class: "btn btn-xs btn-primary" %>
          <%= link_to 'Delete', store, class: "btn btn-xs btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Store', new_store_path, class: "btn btn-large btn-primary" %>
