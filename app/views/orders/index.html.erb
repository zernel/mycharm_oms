<table class="table table-bordered">
  <thead>
    <tr>
      <th>订单号</th>
      <th>创建时间</th>
      <th>当前状态</th>
      <th>联系信息</th>
      <th>配送/提货信息</th>
      <th>订单总额</th>
      <th>订单项</th>
      <th>备注</th>
      <th>&nbsp;</th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.serial_number %></td>
        <td><%= order.created_at %></td>
        <td><%= order.state %></td>
        <td><%= order.contact_name %>(<%=  order.contact_phone %>)</td>
        <td>
          <%= order.takeout_time %>
          <%= order.takeout_store_id %>
          <%= order.shipping_address %>
        </td>
        <td><%= order.amount %></td>
        <td><%= order.order_items %></td>
        <td><%= order.note %></td>
        <td>
          <%= link_to '订单详情', order %>
          <%= link_to '修改', edit_order_path(order) %>
          <%= link_to '删除', order, method: :delete, data: { confirm: '确定要删除这张订单吗?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '创建新订单', new_order_path, class: "btn btn-large btn-primary" %>
